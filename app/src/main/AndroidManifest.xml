<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nakolanie.powercycling">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.game.Game_QueueManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.game.Game_ManageDevice"
            android:exported="false" />
        <activity
            android:name=".activities.game.Game_ManageRoom"
            android:exported="false" />
        <activity
            android:name=".activities.game.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".activities.game.Game_RoomsManagementActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/noAnimTheme" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>