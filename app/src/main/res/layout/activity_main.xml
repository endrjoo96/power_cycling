<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/mainActivity_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Cycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/mainActivity_button_start"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="124dp"
        android:onClick="onStartButtonClick"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textView_title" />

    <Button
        android:id="@+id/mainActivity_button_exit"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:onClick="onExitButtonClick"
        android:text="WyjdÅº"
        app:layout_constraintStart_toStartOf="@+id/mainActivity_button_start"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_button_start" />

</androidx.constraintlayout.widget.ConstraintLayout>